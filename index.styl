/**
 * Module dependencies
 */

@require './node_modules/font'

/**
 * Unit-less `line-height` for use in components, e.g., buttons.
 */

$line-height-base ?= 1.428571429 // 20/14

/**
 * Computed `line-height` for use with `margin`, `padding`, etc.
 */

$line-height-computed ?= floor(($font-size-base * $line-height-base)) // ~20px
